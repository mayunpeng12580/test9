.main{
  width: 100%;
  padding:18rpx 20rpx 0; 
}

.main .text1{
  width: 100%;
  font-size: 44rpx;
  color: #333
}

.main .text2{
      width: 100%;
      padding-top:19rpx 
}

.text2::after{
  content: "";
  display: block;
  clear: both
}

.main .text2 view{
  float: left;
  color: #999;
  font-size: 24rpx;
  margin-right: 22rpx

}

.price{
  color: #fe5151;
  font-size: 36rpx
}

.text3{
  border: 1px solid #fe5151;
  margin: 12rpx 0 40rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding: 10rpx 18rpx;
  width: 300rpx;
  color: #fe5151
}

.text4{

  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 30rpx 0;
}

.text4 h4{
  border-left: 4rpx solid #fe5151;
  padding-left: 20rpx
}

.text4 p{
  color: #5d6770;
  font-size: 24rpx
}

.text5{
  width: 100%;

  display: flex
}

.text5 .text5img image{
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx
}

.text5 .text5left{
  flex: 3;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  padding-top: 10rpx
}

.text5 .text5center, .text5right{
  flex: 1;
  color: #858c94;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
  
}

.text6{
  width: 100%;
  display: flex;
  margin-top: 50rpx;
  height: 300rpx
}

.text6 .text6left{
  flex: 1;
  color: #333;
  /* font-size: 32rpx; */
  border-left: 2rpx solid #fe5151;
  padding-left: 14rpx;
  height: 45rpx;
  line-height: 45rpx
}

.text6 .text6right{
  flex: 1;
  text-align: right;
  color: #939ca5;
  font-size: 24rpx;
  padding-right: 50rpx;
  margin-top: 5rpx;
  box-sizing: border-box
}

.footernav{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  border-top: 1px solid #939ca5;
}

.footernav .footernavleft, .footernav .footernavcenter{
  flex: 1;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: white
}

.footernav .footernavright{
  flex: 2;
  background-color: #fe5151;
  color: white;
  text-align: center
}

.footernav .footernavright h2, .footernav .footernavright p{
  line-height: 50rpx;
  display: block
}

.footernav .footernavright p{
  font-size: 28rpx
}